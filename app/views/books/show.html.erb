

<body>
    
    

<%= flash[:success] %>
<div class = "show">
    <h1>Book Detail</h1>
    
    <table class = "t-show">
        
        <tbody>
            <td>
                <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: 'no_image.jpg' %>
                <%= @book.user.name %>
                <% end %>
            </td>
            <td>
                <%= link_to  book_path(@book) do %>
                <%= @book.title %>
                <% end %>
            </td>
            <td>
                <%= @book.body %>
            </td>
            <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "【確認】本当に削除してもよろしいですか？" } %>
                <% end %>
            </td>
        </tbody>
    </table>
    
</div>







</body>