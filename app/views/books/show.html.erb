

<body>
    
    

<%= flash[:success] %>
<p id = "notice"></p>
<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <div class = "inline">
                    <div class = "user-box">
                        <%= render 'books/user', user: @user %>
                    </div>
                    <div class = "create-box">
                        <%= render 'books/create', create: @create %>
                    </div>
            </div>
        </div>

        <div class = "col-md-8 offset-md-1">
            <div class = "inline">
                <h1>Book detail</h1>
                
                <table class = "table">
                    
                    <tbody>
                        <td>
                            <%= link_to user_path(@book.user_id) do %>
                            <%= attachment_image_tag @book.user, :profile_image,:fill, 40, 40,  fallback: 'no_image.jpg' %>
                            <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to  book_path(@book) do %>
                            <%= @book.title %>
                            <% end %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <% if @book.user == current_user %>
                        <td>
                            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm btn-block mb-3 edit" %>
                        <td>
                            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm btn-block mb-3 delete", data: { confirm: "【確認】本当に削除してもよろしいですか？" } %>
                        </td>
                        <% else %>
                        <td>
                        </td>
                        <td>
                        </td>
                        <% end %>
                        </td>
                    </tbody>
                </table>
    
            </div>
        </div>
    </div>
</div>



</body>