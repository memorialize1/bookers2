

<body>
    
    

<%= flash[:success] %>

<div class = "creater-box">
   <div class = "user-box">
       <%= render 'books/user', user: @user %>
   </div>
   <div class = "create-box">
       <%= render 'books/create', create: @create %>
   </div>
</div>


<div class = "show">
    <h1>Book detail</h1>
    
    <table class = "t-show">
        
        <tbody>
            <td>
                <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: 'no_image.jpg' %>
                <%= @book.user.name %>
                <% end %>
            </td>
            <td>
                <%= link_to  book_path(@book) do %>
                <%= @book.title %>
                <% end %>
            </td>
            <td>
                <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
                <%= link_to "Edit", edit_book_path(@book) %>
            <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "【確認】本当に削除してもよろしいですか？" } %>
            </td>
            <% else %>
            <td>
            </td>
            <td>
            </td>
            <% end %>
            </td>
        </tbody>
    </table>
    
</div>







</body>