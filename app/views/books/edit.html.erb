


<body>
  <header>
    <h1>Editing Book</h1>
  </header>
<div class = "main2">
  <%= form_with model:@book,local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
  <% end %>
</div>


<fotter>
  <% if @book.errors.any? %>
    <div class="warning">
      <ul>
        <h3>errors</h3>
        <% @book.errors.full_messages.each do |message| %>
          <li> %= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</fotter>  
</body>