
<h3>New book</h3>
    <div class = "text-box">
        <%= form_with model: create, local:true do |f| %>
            <div class = "form-group">
                <label for = "f.title">Title</label></br>
                <%= f.text_field :title %>
            </div>
            <div class = "form-group">
                <label for = "f.body">Opinion</label></br>
                <%= f.text_area :body %>
            </div>
                <%= f.submit 'Create Book', class: "btn btn-success btn-sm create" %>
        <% end %>
    </div>
        <div class = "form-group">
            <% if @create.errors.any? %>
                <div class="warning">
                    <h3>errors</h3>
                    <%= @create.errors.count %>件のエラーが発生しました。
                    <% @create.errors.full_messages.each do |message| %>
                        <li> <%= message %></li>
                    <% end %>
                </div>
            <% end %>
            
        </div>

