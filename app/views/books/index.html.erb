



<body>
<h1>Books#index</h1>

<div class = "user-box">
    
    <h3>New Book</h3>
    
    <div class = "text-box">
        <%= form_with model:@book, local:true do |f| %>
        <p>title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
        <% end %>
</div>

<div class = "index-box">
    
    <table class = "contents">
        
        <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </thead>
        
        <tbody>
            <% @books.each do |book| %>
            <tr>
                
               
                <td>
                    <%= attachment_image_tag book.user, :profile_image, fallback: 'sample-author1.jpg' %>
                </td>
                <td>
                    <%= book.title %>
                </td>
                <td>
                    <%= book.body %>
                </td>
            
            </tr>
            <% end %>
            
        </tbody>
        
    </table>
    
    
</div>



</body>