



<body>
    
<%= flash[:success] %>
    
<h1>Books#index</h1>

<div class = "creater-box">
   <h3>User info</h3>
    <div class = "user-box">
       <%= attachment_image_tag @user, :profile_image, fallback: 'no_image.jpg' %>
       
       <div class = "info">
           
           <table class = "name">
               <td>Name</td>
               <td> <%= @user.name %> </td>
           </table>
           
           <table class = "introduction">
               <td>introduction</td>
               <td> <%= @user.introduction %> </td>
           </table>
           
           <%= link_to "edit", edit_user_path(@user) %>
       
       
    </div>
    
    <h3>New Book</h3>
    <div class = "text-box">
        <%= form_with model:@book, local:true do |f| %>
        <p>title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit '投稿' %>
        <% end %>
</div>

<div class = "index-box">
    
    <table class = "contents">
        
        <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </thead>
        
        <tbody>
            <% @books.each do |book| %>
            <tr>
                
               
                <td>
                    <%= attachment_image_tag book.user, :profile_image, fallback: 'no_image.jpg' %>
                </td>
                <td>
                    <%=link_to book_path(book) do %>
                    <%= book.title %>
                    <% end %>
                </td>
                <td>
                    <%= book.body %>
                </td>
            
            </tr>
            <% end %>
            <%= paginate @books %>
            
        </tbody>
        
    </table>
    
    
</div>



</body>