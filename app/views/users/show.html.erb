
<%= flash[:success] %>

<div class = "creater-box">
   <div class = "user-box">
       <%= render 'books/user', user: @user %>
   </div>
   <div class = "create-box">
       <%= render 'books/create', create: @create %>
   </div>
</div>

<h1>User Index</h1>

<div class = "index-box">
    
    <table class = "contents">
        
        <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="5"></th>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
            <tr>
                
               
                <td>
                    <%= attachment_image_tag book.user, :profile_image, fallback: 'no_image.jpg' %>
                </td>
                <td>
                    <%=link_to book_path(book) do %>
                    <%= book.title %>
                    <% end %>
                </td>
                <td>
                    <%= book.body %>
                </td>
                
                <% if @user.id == current_user %>
                <td>
                    <%= link_to "Edit", edit_book_path(book) %>
                <td>
                    <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "【確認】本当に削除してもよろしいですか？" } %>
                </td>
                <% else %>
                <td>
                </td>
                <td>
                </td>
                <% end %>
            </tr>
          <% end %>
            <%= paginate @books %>
            
        </tbody>
        
    </table>
    
    
</div>