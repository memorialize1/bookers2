

<body>


<p id = "notice"></p>
<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <div class = "inline">
                    <div class = "user-box">
                        <%= render 'books/user', user: @user %>
                    </div>
                    <div class = "create-box">
                        <%= render 'books/create', create: @create %>
                    </div>
            </div>
        </div>

        <div class = "col-md-8 offset-md-1">
            <div class = "inline">
                <h1>Users</h1>
                    
                    <table class = "table">
                        
                        <thead>
                            <th>ProfileImage</th>
                            <th>Name</th>
                            <th>introduction</th>
                            <th></th>
                            <th colspan="4"></th>
                        </thead>
                        
                        <tbody>
                            <% @users.each do |user| %>
                            <tr>
                                
                               
                                <td>
                                    <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: 'no_image.jpg' %>
                                </td>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.introduction %>
                                </td>
                                <td>
                                    <%= link_to "Show", user_path(user), class: "btn btn-primary btn-sm btn-block mb-3 show" %>
                                </td>
                            
                            </tr>
                            <% end %>
                            <%= paginate @users %>
                            
                        </tbody>
                        
                    </table>
    
            </div>
        </div>
    </div>
</div>



</body>